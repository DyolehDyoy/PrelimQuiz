fun convertCurrency(
    amount: Double,
    fromCurrency: String,
    toCurrency: String,
    exchangeRate: Double
): Double {
    if (amount < 0) {
        throw IllegalArgumentException("Amount must be non-negative.")
    }
    
    if (exchangeRate <= 0) {
        throw IllegalArgumentException("Exchange rate must be greater than zero.")
    }

    return if (fromCurrency == toCurrency) {
        amount // No conversion needed if both currencies are the same
    } else {
        amount * exchangeRate
    }
}

fun main() {
    try {
        // Fixed exchange rate (e.g., 1 USD to EUR)
        val exchangeRate = 0.85

        println("Currency Converter")
        println("Enter the amount: ")
        val amount = readLine()?.toDouble() ?: 0.0

        println("Enter the source currency (e.g., USD): ")
        val fromCurrency = readLine() ?: ""

        println("Enter the target currency (e.g., EUR): ")
        val toCurrency = readLine() ?: ""

        val convertedAmount = convertCurrency(amount, fromCurrency, toCurrency, exchangeRate)
        println("$amount $fromCurrency is equal to $convertedAmount $toCurrency")
    } catch (e: Exception) {
        println("Error: ${e.message}")
    }
}
